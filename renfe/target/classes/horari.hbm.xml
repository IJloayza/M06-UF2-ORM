<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.iticbcn.loayzaignacio.Horari" table="horari">
        <id name="idHorari" column="id">
            <generator class="identity"/>
        </id>
        <property column="hora_Sortida" name="hourDepart"/>
        <property column="hora_Arribada" name="hourArribe"/>

        <many-to-one name="trajecte" class="com.iticbcn.loayzaignacio.Trajecte" cascade="persist,merge" foreign-key="FK_HOR_TRA">
            <column name="trajecte"/>
        </many-to-one>
    </class>
</hibernate-mapping>